NODE_ENV=production
APP_NAME=news-platform-backend
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=3000
API_PREFIX=api/v1
LOG_LEVEL=log
LOG_PRETTY=false
LOG_FILE_ENABLED=true
LOG_FILE_LEVEL=log
LOG_FILE_DIR=logs
LOG_FILE_MAX_SIZE_MB=20
LOG_FILE_MAX_FILES=30
CORS_ORIGIN=*
TRUST_PROXY=true

DATABASE_URL=postgresql://postgres:postgres@postgres:5432/news_platform?schema=public
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=10000
REDIS_URL=redis://redis:6379
JWT_SECRET=change-this-secret-to-at-least-32-characters
JWT_EXPIRES_IN=15m

SWAGGER_ENABLED=true
SWAGGER_PATH=docs
SWAGGER_TITLE=News Platform API
SWAGGER_DESCRIPTION=Production-ready backend foundation for the news platform.
SWAGGER_VERSION=1.0.0
